@model Sismog.ViewModels.Pedido.ViewModelPedido;

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Tem certeza que deseja excluir o pedido <b>@Model.IdPedido</b> ?</h3>
