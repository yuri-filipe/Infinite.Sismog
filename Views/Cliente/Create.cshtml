@model Sismog.Models.Cliente

@{
    ViewData["Title"] = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Adicionar Cliente</h4>
<hr />
<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cpf" class="control-label"></label>
            <input asp-for="Cpf" class="form-control" />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rg" class="control-label"></label>
            <input asp-for="Rg" class="form-control" />
            <span asp-validation-for="Rg" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nascimento" class="control-label"></label>
            <input type="date" asp-for="Nascimento" class="form-control" />
            <span asp-validation-for="Nascimento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Idade" class="control-label"></label>
            <input asp-for="Idade" class="form-control" />
            <span asp-validation-for="Idade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sexo" class="control-label"></label>
            <select asp-for="Sexo" class="form-control">
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ObservacaoCliente" class="control-label"></label>
            <input asp-for="ObservacaoCliente" class="form-control" />
            <span asp-validation-for="ObservacaoCliente" class="text-danger"></span>
        </div>
        <div class="d-grid gap-2" style="margin-top: 10px;">
            <button type="submit" value="Create" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

